<div class="col-md-4"> <!-- CARD -->
  <div class="card mb-4 shadow-sm snippet-card">      
    <div class="card-body">
      <div class="card-text">
        <a class="card-text-title" href="/snippets/snippet/{{ this._id }}">{{ this.description }}</a>
        <p class="card-text-language-icon">
          {{#if this.programmingLanugage }}
            <i class="devicon devicon-javascript-plain"></i>
          {{/if}}
            <i class="devicon fa fa-xs fa-code" style="font-size: 0.9rem;"></i>
        </p>
        <p class="card-text-body">
          <span class="tagLinks">
          {{#each this.tags}}
            <a href="#">#{{this}}</a>
          {{/each}}
          </span>
        </span>
      </div>
      
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          {{#if session.userId }} 
            <button type="button" class="btn btn-sm btn-outline-secondary px-2 ml-2"><i class="fa fa-pen"></i></button>
          {{/if}}
        </div>
        <small class="date text-muted">{{formatRelative this.createdAt}}</small>
      </div>
    </div>
  </div> 
</div> <!-- END CARD -->  