<form class="form-signin" method="POST" action="/users/register">
  <div class="text-center mb-4">
    <h1 class="h3 mb-5 font-weight-normal">Register</h1>
  </div>

  <div class="form-label-group">
    <input type="text" name="username" class="form-control" placeholder="Username" required autofocus>
    <label for="inputEmail">Username</label>
  </div>

  <div class="form-label-group">
    <input type="text" name="firstName" class="form-control" placeholder="First Name" required>
    <label for="inputEmail">First Name</label>
  </div>
  <div class="form-label-group">
    <input type="text" name="lastName" class="form-control" placeholder="Last Name" required>
    <label for="inputEmail">Last Name</label>
  </div>

  <div class="form-label-group">
    <input type="password" name="password" class="form-control" placeholder="Password" required>
    <label for="inputPassword">Password</label>
  </div>

  <div class="form-label-group">
    <input type="password" name="confirmedPassword" class="form-control" placeholder="Comfirm Password" required>
    <label for="inputPassword">Confirm Password</label>
  </div>

  <button class="btn btn-primary btn-block" type="submit">Register</button>
</form>